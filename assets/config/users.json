{
  "roles": {
    "customer": {
      "name": "顾客",
      "description": "浏览菜单、点餐、支付",
      "permissions": [
        "view_menu",
        "place_order",
        "view_my_orders",
        "make_payment"
      ]
    },
    "chef": {
      "name": "厨师",
      "description": "查看订单、制作菜品",
      "permissions": [
        "view_pending_orders",
        "accept_order",
        "start_cooking",
        "complete_cooking"
      ]
    },
    "waiter": {
      "name": "传菜员",
      "description": "传菜、确认上桌",
      "permissions": [
        "view_ready_orders",
        "deliver_dish",
        "confirm_served"
      ]
    },
    "cashier": {
      "name": "收银员",
      "description": "处理支付、打印小票",
      "permissions": [
        "view_orders",
        "process_payment",
        "print_receipt"
      ]
    },
    "manager": {
      "name": "店长",
      "description": "管理店铺、查看数据",
      "permissions": [
        "view_all_orders",
        "view_statistics",
        "manage_menu",
        "manage_users",
        "view_revenue"
      ]
    }
  },
